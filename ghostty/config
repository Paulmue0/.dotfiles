command = zsh --login -c "if command -v tmux >/dev/null 2>&1; then tmux attach || tmux; else zsh; fi"

window-padding-x = 14,2
window-padding-y = 6,0

font-family = "JetBrainsMono Nerd Font"
font-size = 15

macos-titlebar-style = hidden

confirm-close-surface = false

keybind = cmd+j=toggle_quick_terminal

macos-option-as-alt = right

quick-terminal-animation-duration = 0.08

keybind = super+i=inspector:toggle
keybind = super+r=reload_config

macos-icon = official

# Disable some keybinds
keybind=super+j=unbind
keybind=super+k=unbind

# cmd for nvim hjkl
keybind = super+h=esc:h
keybind = super+j=esc:j
keybind = super+k=esc:k
keybind = super+l=esc:l


